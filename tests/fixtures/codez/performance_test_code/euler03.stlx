//

even := procedure(n) {
   return n % 2 == 0;
};

prime_factors := procedure(n) {

   facts := []; 
   while (even(n)) { 
     facts += [2]; 
     n /= 2;
   }

   while (exists (k in [3,5..round(sqrt(n))] | round(n) % k == 0)) {
      facts += [k]; 
      n /= k;
   }
   facts += [n];

   return facts;
};

// Elegant but much slower
factors2 := procedure(n) {
  r := [f : f in [2..round(sqrt(n))] | n % f == 0 && (forall (m in [2..round(sqrt(f))] | f % m > 0)) ];
  return(r);
};

problem3 := procedure() {
  print("Problem 3: ");
  n := 600851475143;
  f := round(sqrt(n));
  fact := prime_factors(n);
  print(fact[#fact]);
};

problem3b := procedure() {

  print("Problem 3b:");
  n := 600851475143;
  fact := factors2(n);
  print(fact[#fact]);
};


problem3();
problem3b();
